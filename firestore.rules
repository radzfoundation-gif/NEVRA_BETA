rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // =====================================================
    // USERS COLLECTION
    // =====================================================
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      
      // User memories subcollection
      match /memories/{memoryId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // =====================================================
    // CHAT SESSIONS COLLECTION
    // =====================================================
    // Users can only access their own chat sessions
    match /chatSessions/{sessionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated();
        allow delete: if isAuthenticated();
      }
    }
    
    // =====================================================
    // AI USAGE TRACKING COLLECTION
    // =====================================================
    // Users can only read their own AI usage data
    // System can write usage data for any user
    match /aiUsage/{usageId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if false; // Usage records should not be updated
      allow delete: if false; // Usage records should not be deleted
    }
    
    // =====================================================
    // USER PREFERENCES COLLECTION
    // =====================================================
    // Users can only access their own preferences
    match /userPreferences/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // =====================================================
    // API CONNECTIONS COLLECTION (for API Integration Wizard)
    // =====================================================
    // Users can only access their own API connections
    match /apiConnections/{connectionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // =====================================================
    // WORKFLOWS COLLECTION
    // =====================================================
    // Users can only access their own workflows
    match /workflows/{workflowId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // =====================================================
    // AGENTS COLLECTION
    // =====================================================
    // Users can only access their own agents
    match /agents/{agentId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // =====================================================
    // KNOWLEDGE BASE COLLECTION
    // =====================================================
    // Users can only access their own knowledge base entries
    match /knowledgeBase/{entryId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // =====================================================
    // DENY ALL OTHER ACCESS
    // =====================================================
    // Explicitly deny access to any other collections not defined above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
